{{#if isValid}}
<h3>Listado de productos: </h3>
<div class="itemList"> 
    {{#each docs}}
    <div class="item">
        <h4>Id: {{this._id}}</h4>
        <p>Title: {{this.title}}</p>
        <p>Code: {{this.code}}</p>
        <p>Price: {{this.price}}</p>
        <p>Stock: {{this.stock}}</p>
        <p>Category: {{this.category}}</p>

    </div>
    {{/each}}
</div>

<div>
    {{#if hasPrevPage}}
    <a href={{this.prevLink}}>
        << Anterior </a>
            {{/if}}

            &nbsp;
            {{this.page}}
            &nbsp;

            {{#if hasNextPage}}
            <a href={{this.nextLink}}>
                Siguiente >> </a>
            {{/if}}

</div>


{{else}}
<h1>No hay productos para mostrar</h1>
{{/if}}